{
  "name": "@event-boss/api",
  "author": "IlijaNL",
  "private": true,
  "version": "0.0.1",
  "workspaces": {
    "nohoist": [
      "**"
    ]
  },
  "scripts": {
    "tc": "tsc --noEmit",
    "dev": "ts-node-dev -r tsconfig-paths/register -- src/server.ts",
    "dev:debug": "ts-node-dev -r tsconfig-paths/register --inspect  --respawn -- src/server.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "build:clean": "rimraf dist && npm run gen && npm run build",
    "build": "tsc --project ./tsconfig.build.json",
    "start": "fastify start -l error -r ./bootstrap.js dist/app.js",
    "gen": "graphql-codegen && yarn kysely-codegen --exclude-pattern _*.* --url postgres://postgres:postgres@localhost:5432/app --out-file ./src/__generated__/db.d.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test": "jest"
  },
  "license": "MIT",
  "dependencies": {
    "@fastify/cookie": "^8.0.0",
    "@fastify/cors": "^8.1.0",
    "@fastify/helmet": "^10.0.0",
    "@fastify/rate-limit": "^7.4.0",
    "@fastify/sensible": "^5.1.1",
    "@graphql-typed-document-node/core": "^3.1.1",
    "@sinclair/typebox": "^0.24.28",
    "@typed-doc/core": "*",
    "ajv": "^8.8.2",
    "ajv-formats": "^2.1.1",
    "api-contracts": "*",
    "date-fns": "^2.25.0",
    "delay": "^5.0.0",
    "dotenv-safe": "^8.2.0",
    "ejs": "^3.1.8",
    "email-templates": "^10.0.1",
    "fast-json-stable-stringify": "^2.1.0",
    "fast-jwt": "^1.5.1",
    "fastify": "^4.5.3",
    "fastify-cli": "^5.5.0",
    "graphql": "16.6.0",
    "graphql-scalars": "^1.13.6",
    "graphql-tag": "^2.12.6",
    "http-errors": "^1.8.0",
    "kysely": "^0.22.0",
    "lodash": "^4.17.21",
    "lru-cache": "^6.0.0",
    "nodemailer": "^6.7.8",
    "p-map": "^4.0.0",
    "p-retry": "^4.6.1",
    "pg": "^8.8.0",
    "pg-boss": "^8.0.0",
    "pg-promise": "^10.12.0",
    "ts-pattern": "^4.0.5",
    "tsconfig-paths": "^3.11.0",
    "undici": "^5.10.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.12.0",
    "@graphql-codegen/import-types-preset": "^2.2.3",
    "@graphql-codegen/typed-document-node": "^2.3.3",
    "@graphql-codegen/typescript": "^2.7.3",
    "@graphql-codegen/typescript-operations": "^2.5.3",
    "@types/ejs": "^3.1.1",
    "@types/email-templates": "^10.0.1",
    "@types/http-errors": "^1.8.1",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.176",
    "@types/lru-cache": "^5.1.1",
    "@types/node": "^16.0.0",
    "@types/pg": "^8.6.4",
    "@types/uuid": "^8.3.1",
    "close-with-grace": "^1.1.0",
    "jest": "^27.5.1",
    "kysely-codegen": "^0.6.2",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^2.0.0",
